# vim: set ft=sh:

build ()
{
    MODULES="nbd"
    BINARIES=""
    FILES=""
    SCRIPT="archiso_pxe_nbd"

    add_binary nbd-client

    add_file "/lib/initcpio/archiso_pxe_nbd" "/archiso_pxe_nbd"
}

help ()
{
cat<<HELPEOF
  This hook loads the necessary modules for boot via PXE and NBD.
HELPEOF
}
